@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach (var book in ViewBag.Books) {
                <tr>
                    <td><p>@book.Name</p></td>
                    <td><p>@book.Author</p></td>
                    <td><p>@book.Price</p></td>
                    <td><p><a href="/Home/Buy/@book.Id">Купить</a></p></td>
                </tr>
            }
        </table>
    </div>